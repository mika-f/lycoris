{
  "name": "@natsuneko-laboratory/lycoris",
  "version": "0.1.0",
  "description": "Lycoris is a state management library inspired by Recoil and Jotai, but for Vue 3 and Vue 2 with Composition API",
  "main": "./dist/lycoris.js",
  "exports": {
    ".": {
      "import": "./dist/lycoris.js",
      "require": "./dist/lycoris.umd.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "type": "module",
  "repository": "https://github.com/mika-f/lycoris",
  "author": "Natsuneko",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "vite",
    "build": "rimraf ./dist && vite build && vue-tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue-demi": "^0.13.11"
  },
  "devDependencies": {
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.10"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue-composition-api": {
      "optional": true
    }
  }
}
